<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Website 4man</title>

    <link rel="shortcut icon" href="~/images/logo.png">

    <!-- jQuery -->
    <script src="~/js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="~/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    <link href="~/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

    <!-- custom style -->
    <link href="~/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- custom javascript -->
    <script src="~/js/script.js" type="text/javascript"></script>
    <!-- bootraps<!-->
    <link rel="stylesheet" href="~//lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~//css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~//Demo_GiaoDien.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="section-header">
        <div class="container">
            <section class="header-main border-bottom">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-2 col-lg-3 col-md-12">
                            <a class="brand-wrap">
                                <img class="logo" style="width:250px;height:auto" src="~/images/4man.png">
                            </a> <!-- brand-wrap.// -->
                        </div>
                        <div class="col-xl-6 col-lg-5 col-md-6">
                            <form action="#" class="search-header">
                                <div class="input-group w-100">
                                    <input type="text" class="form-control" name="StrSearch" value="@ViewBag.StrSearch" placeholder="Search">

                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="submit">
                                            <i class="fa fa-search"></i> Search
                                        </button>
                                    </div>
                                </div>
                            </form> <!-- search-wrap .end// -->
                        </div> <!-- col.// -->
                        <div class="col-xl-4 col-lg-4 col-md-6">
                            <div class="widgets-wrap float-md-right">
                                <div class="widget-header mr-3">
                                    <a href="#" class="nav-link ">
                                        Login
                                    </a>
                                </div>
                                <div class="widget-header mr-3">
                                    <a href="#" class="nav-link ">
                                        Resign
                                    </a>
                                </div>

                            </div> <!-- widgets-wrap.// -->
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->
                </div> <!-- container.// -->
            </section> <!-- header-main .// -->
            <nav class="navbar navbar-main navbar-expand pl-0">
                <ul class="navbar-nav flex-wrap">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Guest" asp-action="Home">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Guest" asp-action="Home">Giới thiệu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Guest" asp-action="Home">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Combos" asp-action="Index">Contact</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"> Dropdown </a>
                        <div class="dropdown-menu small">
                            <nav class="row">
                                <div class="col-md-auto">
                                    <a class="nav-link" asp-controller="Guest" asp-action="Home">Home</a>
                                </div>
                            </nav> <!--  row end .// -->
                        </div> <!--  dropdown-menu dropdown-large end.// -->
                    </li>
                </ul>
            </nav> <!-- navbar-main  .// -->

        </div> <!-- container.// -->
    </header> <!-- section-header.// -->

    <div class="container">
        <main role="main" class="pb-3">
            <div style="text-align:center"> 
                @Html.ActionLink("Fast Food","ShowListFastFood","Product",null,new {@class= "btn btn-outline-success"})
                @Html.ActionLink("Combos Food","ShowListCombosFood","Product",null,new {@class= "btn btn-outline-success"})
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Demo_GiaoDien
        </div>
    </footer>
    <script src="~//lib/jquery/dist/jquery.min.js"></script>
    <script src="~//lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~//js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>