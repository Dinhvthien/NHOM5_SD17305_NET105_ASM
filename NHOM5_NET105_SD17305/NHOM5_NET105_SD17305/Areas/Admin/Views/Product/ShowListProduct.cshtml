@model IEnumerable<NHOM5_NET105_SD17305.Data.Models.Product>

@{
    ViewData["Title"] = "ShowListProduct";

 List<string>
    imageExtensions = new List<string>
        ()
        {
        ".png", ".jpg", ".jpeg", ".gif", ".tiff", ".pdf"
        };
 }
<h1>ShowListProduct</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @{
                        string extension = System.IO.Path.GetExtension(item.Image);
                    }
                    @if (imageExtensions.Contains(extension.Trim()))
                    {
                        <img src="~/images/avatars/@item.Image" height="100px">
                    }
                    else
                    {
                        <img src="~/images/avatars/logo.png" height="100px">
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descriptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LongDescription)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id}) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "DeleteConfirmed", new { id = item.Id }) |

                   @*<button class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id" asp-controller="Product" asp-area="Admin">Delete</button>*@
                </td>
            </tr>
        }
    </tbody>
</table>
