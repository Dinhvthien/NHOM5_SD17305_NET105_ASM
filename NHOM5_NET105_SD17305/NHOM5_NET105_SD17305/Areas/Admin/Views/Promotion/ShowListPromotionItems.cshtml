@model IEnumerable<NHOM5_NET105_SD17305.Data.Models.Product>
<table class="table align-items-center mb-0">
    <thead>
        <tr>
            @*<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"> Image</th>*@
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@Html.DisplayNameFor(model => model.ProductName)</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Weight)</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@Html.DisplayNameFor(model => model.Price)</th>
            <th class="text-secondary opacity-7"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="d-flex px-2 py-1">
                        <div>
                            <img "https://picsum.photos/200/300" class="avatar avatar-sm me-3" alt="user1">
                        </div>
                        <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@item.ProductName</h6>
                        </div>
                    </div>
                </td>
                <td>
                    <h6 class="mb-0 text-sm">@item.ProductName</h6>
                </td>
                <td>
                    <h6 class="mb-0 text-sm">@item.Weight</h6>
                </td>
                <td>
                    <h6 class="mb-0 text-sm">@item.Price</h6>
                </td>

                <td class="align-middle">
                    @Html.ActionLink("Remove", "RemoveProductItem", "Promotion", new { idsp = item.Id }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Are you sure you want to remove this product item?');" })
                </td>
            </tr>
        }
    </tbody>
</table>