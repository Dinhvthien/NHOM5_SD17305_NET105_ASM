@model IEnumerable<NHOM5_NET105_SD17305.Data.Models.Bill>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminQlBill.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>Tên khách hàng</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Người nhận</th>
            <th>Địa chỉ người nhận</th>
            <th>Số điện thoại người nhận</th>
            <th>Số tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RecipientName)</td>
                <td>@Html.DisplayFor(modelItem => item.Create_Date)</td>
                <td>
                    @if (item.BillStatus_Id == 1)
                    {
                        <p>Chờ thanh toán</p>
                    }
                    @if (item.BillStatus_Id == 2)
                    {
                        <p>Chờ Xác nhận</p>
                    }
                    @if (item.BillStatus_Id == 3)
                    {
                        <p>Đang vận chuyển</p>
                    }
                    @if (item.BillStatus_Id == 4)
                    {
                        <p>Giao hàng thành công</p>
                    }
                    @if (item.BillStatus_Id == 5)
                    {
                        <p>Hủy đơn</p>
                    }
                    @if (item.BillStatus_Id == 6)
                    {
                        <p>Trả hàng</p>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.RecipientName)</td>
                <td>@Html.DisplayFor(modelItem => item.RecipientPhone)</td>
                <td>@Html.DisplayFor(modelItem => item.RecipientAddress)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                <td>
                    @{
                        var status = item.BillStatus_Id + 1;
                        var id = item.Id;
                    }
                    @if (item.BillStatus_Id == 1)
                    {
                        <a href="UpdateStatus?status=@status&idbill=@id">chuyển trạng thái</a>
                    }
                    @if (item.BillStatus_Id == 2)
                    {
                        <a href="UpdateStatus?status=@status&idbill=@id">chuyển trạng thái</a>

                    }
                    @if (item.BillStatus_Id == 3)
                    {
                        <a href="UpdateStatus?status=@status&idbill=@id">chuyển trạng thái</a>

                    }
                </td>
                <td>
                    <a href="UpdateStatus?status=5&idbill=@id">Hủy đơn</a>

                </td>
            </tr>
        }
    </tbody>
</table>
