@model IEnumerable<NHOM5_NET105_SD17305.Data.Models.Bill>

<table class="table">
	<thead>
		<tr>
			<th>
				Tên khách hàng
			</th>
			<th>
				Ngày tạo
			</th>
			<th>
				Trạng thái
			</th>
			<th>
				Người nhận
			</th>
			<th>
				Địa chỉ người nhận
			</th>
			<th>
				Số điện thoại người nhận
			</th>
			<th>
				Số tiền
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
				<tr>
				<td>
					@Html.DisplayFor(modelItem => item.UserId)
				</td>
					<td>
					@Html.DisplayFor(modelItem => item.Create_Date)
					</td>
					<td>
					@if (item.BillStatus_Id == 1)
					{
						<p>Chờ thanh toán</p>
					}
					@if (item.BillStatus_Id == 2)
					{
								<p>Chờ Xác nhận</p>
					}
					@if (item.BillStatus_Id == 3)
					{
								<p>Đang vận chuyển</p>
					}
					@if (item.BillStatus_Id == 4)
					{
								<p>Giao hàng thành công</p>
					}
					@if (item.BillStatus_Id == 5)
					{
						<p>Hủy đơn</p>
					}			@if (item.BillStatus_Id == 6)
					{
						<p>Trả hàng</p>
					}
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.RecipientName)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.RecipientPhone)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.RecipientAddress)
					</td>
				<td>
					@Html.DisplayFor(modelItem => item.TotalAmount)
				</td>
					<td>
					<a asp-area="Admin" asp-controller="QlBill" asp-action="UpdateBill" asp-route-id="@item.Id">Edit</a> |
					<a asp-area="Admin" asp-controller="QlBill" asp-action="DeleteBill" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
		}
	</tbody>
</table>
