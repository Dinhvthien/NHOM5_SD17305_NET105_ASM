@model IEnumerable<NHOM5_NET105_SD17305.Data.Models.CartItem>
<div class="container">
    <table class="table" style="line-height: 20px">
        <tr>
            <th>Image</th>
            <th>Product</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Control</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/images/@item.Image" /></td>
                <td>@item.ProductName</td>
                @if (item.CombosId == null)
                {
                    <td>Fast Food</td>
                }
                else
                {
                    <td>Combo</td>
                }
                <td>
                    <div class="form-group col-md flex-grow-0">
                        <div class="input-group mb-3 input-spinner">
                            <div class="input-group-prepend">
                                <a class="btn btn-light" id="button-minus" @*asp-action="minus" asp-route-id="@item.ProductId" asp-controller="Cart"*@>-</a>
                            </div>
                            <input type="text" class="form-control" value="@item.Quantity" name="quantity" readonly id="quantity-input">
                            <div class="input-group-append">
                                <a class="btn btn-light" id="button-plus" @*asp-action="plus" asp-route-id="@item.ProductId" asp-controller="Cart"*@>+</a>
                            </div>
                        </div>
                    </div>

                </td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.Id">
                        <i class="fas fa-times"></i> <!-- Thêm biểu tượng "x" -->
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="row mb-5">

            <div class="col-md-6">
                <button class="btn btn-outline-primary btn-sm btn-block">Continue Shopping</button>
            </div>
        </div>
       
    </div>
    <div class="col-md-6 pl-5">
        <div class="row justify-content-end">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-12 text-right border-bottom mb-5">
                        <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <span class="text-black">Subtotal</span>
                    </div>
                    <div class="col-md-6 text-right">
                        <strong class="text-black">$0.00</strong>
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-md-6">
                        <span class="text-black">Total</span>
                    </div>
                    <div class="col-md-6 text-right">
                        <strong class="text-black"> @ViewBag.Total.00 đ</strong>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-primary btn-lg py-3 btn-block" href="/Customer/Checkout/Payments">Proceed To Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
