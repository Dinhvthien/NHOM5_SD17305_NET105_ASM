@User.Identity.IsAuthenticated

@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <h1 class="display-4">Admin</h1>
    </div>
}
else if (User.IsInRole("User"))
{
    <div class="text-center">
        @User.Identity.IsAuthenticated
        Role là User nhé
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Guest</h1>
    </div>
}
