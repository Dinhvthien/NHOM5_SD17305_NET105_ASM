        <br />
        <div class="form-group">
            <label for="Name">Tên khách hàng</label>
            <input class="form-control"
                   id="Name"
                   name="RecipientName"
                   type="text"
                   value="Code Mega">

            <input class="form-control" type="number" name="Payment_Type_Id" value="2" hidden/>
            <input class="form-control" type="number" name="BillStatus_Id" value="2" hidden />
        </div>
        <br />
        <div class="form-group">
            <label for="Name">Địa chỉ nhận hàng</label>
            <input class="form-control"
                   id="Name"
                   name="RecipientAddress"
                   type="text"
                   value="Code Mega">

        </div>
        <br />
        <div class="form-group">
            <label for="Name">Số điện thoại</label>
            <input class="form-control"
                   id="Name"
                   name="RecipientPhone"
                   type="number"
                   value="Code Mega">

        </div>
        <br />
        <div class="form-group">
            <label for="Amount">Số tiền</label>
            <input class="form-control"
                   id="Amount"
                   name="Amount"
                   type="number"
                   value="@ViewBag.total" readonly>
        </div>
        <br />
        <div class="form-group">
            <label for="OrderDescription">Nội dung thanh toán</label>
            <textarea class="form-control"
                      cols="20"
                      id="OrderDescription"
                      name="OrderDescription"
                      rows="2">Thanh toán tại 4man</textarea>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Thanh toán (Checkout)</button>
    </form>
</div>

